    # wp core install --path=/var/www/html/ --url=localhost --title="Inception by Nousheen" --admin_user=$WP_ADMIN_USER --admin_password=$WP_ADMIN_PWD --admin_email=$WP_ADMIN_EMAIL --skip-email --allow-root && \
    # wp user create --path=/var/www/html/ $WP_USER $WP_EMAIL --role=contributor --user_pass=$WP_PWD --allow-root && \
    # chown -R www-data:www-data /var/www/html/ && \
    # sed -i 's/listen = .*/listen = wordpress:9000/g' /etc/php/7.3/fpm/pool.d/www.conf && \
    # rm -rf /wordpress

RUN echo "Done setting up wordpress..."

CMD ["php-fpm7.3", "-F"]

